; Win 8 Aero Cursor Black Scheme installation file.

[Version]
signature="$CHICAGO$"

[DefaultInstall]
CopyFiles = Scheme.Cur
AddReg    = Scheme.Reg

[DestinationDirs]
Scheme.Cur = 10,"%CUR_DIR%"

[Scheme.Reg]
HKCU,"Control Panel\Cursors\Schemes","%SCHEME_NAME%",,"%10%\%CUR_DIR%\%pointer%,%10%\%CUR_DIR%\%help%,%10%\%CUR_DIR%\%work%,%10%\%CUR_DIR%\%busy%,"%10%\%CUR_DIR%\%cross%,"%10%\%CUR_DIR%\%text%,%10%\%CUR_DIR%\%Hand%,%10%\%CUR_DIR%\%unavailiable%,%10%\%CUR_DIR%\%Vert%,%10%\%CUR_DIR%\%Horz%,%10%\%CUR_DIR%\%Dgn1%,%10%\%CUR_DIR%\%Dgn2%,%10%\%CUR_DIR%\%move%,%10%\%CUR_DIR%\%alternate%,%10%\%CUR_DIR%\%link%"

[Scheme.Cur]
aero_arrow_xl.cur
aero_busy_xl.ani
aero_cross_xl.cur
aero_ew_xl.cur
aero_helpsel_xl.cur
aero_link_xl_black.cur
aero_move_xl.cur
aero_nesw_xl.cur
aero_ns_xl.cur
aero_nwse_xl.cur
aero_pen_xl.cur
aero_text_xl.cur
aero_unavail_xl.cur
aero_up_xl.cur
aero_working_xl.ani

[Strings]
CUR_DIR       = "Cursors\Aero Black"
SCHEME_NAME   = "Aero Black (extra large)"
pointer       = "aero_arrow_xl.cur"
help          = "aero_helpsel_xl.cur"
work          = "aero_working_xl.ani"
busy          = "aero_busy_xl.ani"
text          = "aero_text_xl.cur"
unavailiable  = "aero_unavail_xl.cur"
vert          = "aero_ns_xl.cur"
horz          = "aero_ew_xl.cur"
dgn1          = "aero_nwse_xl.cur"
dgn2          = "aero_nesw_xl.cur"
move          = "aero_move_xl.cur"
link          = "aero_link_xl_black.cur"
cross         = "aero_cross_xl.cur"
hand          = "aero_pen_xl.cur"
alternate     = "aero_up_xl.cur"